<h1>ALBUM</h1>
<p><%= notice %></p>
<div class="content">
<div class="row">
  <% @blogs.each do |blog| %>
    <div class="col-md-3 col-xs-12">
      <table class="box">
        <div class="position">
          <tr class="test">
            <th></th>
          </tr>
          <tr>
            <th></th>
          </tr>
        </div>
        <tr>
          <td><%= blog.title %></td>
        </tr>
        <tr>
          <td><%= blog.content %></td>
        </tr>
        <tr>
          <td><%= image_tag blog.image %></td>
        </tr>
        <tr>
          <td><%= link_to '確認する', blog_path(blog.id) %></td>
        </tr>
        <tr>
          <td><%= link_to "編集する", edit_blog_path(blog.id) %></td>
        </tr>
        <tr>
          <td><%= link_to '削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
        </tr>
      </table>
    </div>
  <% end %>
</div>
</div>



<br>

<%= link_to '投稿する', new_blog_path %>

